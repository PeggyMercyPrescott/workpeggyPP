@{
    Layout = "";
}
@model IEnumerable<PPcore.Models.saleproduct_standard>

<div class="panel panel-blue">
    <div class="panel-heading">

        @if (ViewBag.IsMember != 1)
        {
            <div class="pull-right" style="margin-top:-2px;">
                <div id="btnCreateSaleProductStd" class="btn btn-default btn-panel-yellow" onclick="saleproduct_standardCreate()">&nbsp;<i class="fa fa-file" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;&nbsp;เพิ่ม&nbsp;&nbsp;&nbsp;&nbsp;</div>
                <div id="btnEditSaleProductStd" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-pencil-square-o" aria-hidden="true" style="color:white;"></i>&nbsp;แก้ไข&nbsp;&nbsp;</div>
            </div>
        }
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper" style="padding-right:10px;">
            <table class="table table-striped table-bordered table-hover dataTablesMod" id="dataTablesSaleProductStdDetailsAsTableList">
                <thead>
                    <tr>
                        <th class="text-center" style="width:15px;">ลำดับ</th>
                        <th style="display:none">@Html.DisplayNameFor(model => model.saleproduct_standard_code)</th>
                        <th>@Html.DisplayNameFor(model => model.saleproduct_standard_desc_thai)</th>
                        <th class="text-center" style="width:35px;">เลือก</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var countOrder = 0; var btnName = ""; var spsCode = "";}
                    @foreach (var item in Model)
                    {
                        countOrder++; btnName = "btn" + item.saleproduct_standard_code; spsCode = item.saleproduct_standard_code;
                        <tr>
                            <td class="text-center" style="width:15px;">@countOrder</td>
                            <td>@Html.DisplayFor(modelItem => item.saleproduct_standard_code)</td>
                            <td>@Html.DisplayFor(modelItem => item.saleproduct_standard_desc_thai)</td>
                            <td class="text-center" style="width:35px;">
                                <div id="@btnName"><div class="btn btn-xs btn-default btn-panel-yellow" onclick="mem_saleproduct_standardCreate('@spsCode')">&nbsp;<i class="fa fa-plus-circle" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;เลือก&nbsp;&nbsp;</div></div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>











    </div>
</div>
