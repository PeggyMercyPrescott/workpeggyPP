            <span asp-validation-for="reservation_amount" class="text-danger" />
        </div>
        <label asp-for="reservation_status" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <select asp-for="reservation_status" class="form-control" asp-items="@ViewBag.reservation_status_list"></select>
        </div>

    </div>

    <div class="form-group">
        <label asp-for="down_payment" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="down_payment" class="form-control" />
            <span asp-validation-for="down_payment" class="text-danger" />
        </div>
    </div>


