@model IEnumerable<PPcore.ViewModels.saleproduct_reservation.detailViewModel>
@{
    Layout = null;
}

<table class="table table-striped table-bordered table-hover" id="a_table">
    <thead>
        <tr>
            <th style="width:15px;">ลำดับ</th>
            <th style="display:none">@Html.DisplayNameFor(model => model.id)</th>
            <th style="width:100px;">@Html.DisplayNameFor(model => model.reservation_code)</th>
            <th style="width:70px;">@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th style="width:150px;">@Html.DisplayNameFor(model => model.saleproduct_desc)</th>
            <th style="width:50px;">@Html.DisplayNameFor(model => model.reserving_member_code)</th>
            <th style="width:150px;">ชื่อผู้จอง</th>
            <th style="width:40px;">@Html.DisplayNameFor(model => model.tel)</th>
            <th style="width:10px;">@Html.DisplayNameFor(model => model.sum_estimate_qty)</th>
            <th style="width:10px;">@Html.DisplayNameFor(model => model.store_quantity)</th>
            <th style="width:10px;">@Html.DisplayNameFor(model => model.reservation_amount)</th>
            <th style="width:10px;">@Html.DisplayNameFor(model => model.saleproduct_unit)</th>
            <th style="width:50px;">@Html.DisplayNameFor(model => model.reservation_status)</th>
            <th style="width:50px;"></th>
        </tr>
    </thead>
    <tbody>
        @{ var countOrder = 0;}
        @foreach (var item in Model)
        {
            countOrder++;
            <tr>
                <td style="width:15px;">
                    @countOrder
                </td>
                <td style="display:none">@Html.DisplayFor(modelItem => item.id)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.reservation_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.saleproduct_desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reserving_member_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fname)  @Html.DisplayFor(modelItem => item.lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sum_estimate_qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.store_quantity)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.reservation_amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.saleproduct_unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reservation_status)
                </td>

                <td id="cell-@Html.DisplayFor(modelItem => item.id)">
                <button class="btn btn-xs btn-panel-yellow" type="button" onclick="detailsClick('@Html.DisplayFor(modelItem => item.id)');">รายละเอียด</button>
                </td>

            </tr>
        }
    </tbody>
</table>

