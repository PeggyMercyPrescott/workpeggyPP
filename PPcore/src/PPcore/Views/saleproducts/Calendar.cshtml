<style>
    #calendar {
        padding: 0;
        font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
        font-size: 14px;
        max-width: 900px;
        margin: 0 auto;
    }
    .fc-event{
        cursor: pointer;
    }
</style>

    <script>
        $(document).ready(function () {
            var today = new Date();
            $('#calendar').attr('style', '');

            $('#calendar').fullCalendar({
                defaultDate: today,
                editable: false,
                eventLimit: true,
                events: function (start, end, timezone, callback) {
                    $.ajax({
                        url: '@Url.Action("getCalendarEvents", "saleproducts")',
                        data: {
                            cstart: start.unix(),
                            cend: end.unix()
                        },
                        success: function (resp) {
                            var events = [];
                            if (resp != "") {
                                resp = JSON.parse(resp); console.log(resp);
                                for (var i = 0; i < resp.length; i++) {
                                    events.push({
                                        title: resp[i].title,
                                        start: resp[i].start
                                    });
                                }
                            }
                            callback(events);
                        }
                    });
                },
                eventClick: function (calEvent, jsEvent, view) {
                    getTableReserve(calEvent.start);
                    $(this).css('color', 'red');
                }
            });

            getTableReserve(today.unix());
        });

