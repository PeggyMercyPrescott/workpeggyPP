@model IEnumerable<PPcore.ViewModels.member.MemberIndexViewModel>
@{
    Layout = null;
}


<div style="position:absolute;left:250px;top:130px;"><span id="count_member" class="badge">จำนวนรายการทั้งหมด @ViewBag.countRecords รายการ</span></div>

<table class="table table-striped table-bordered table-hover" id="a_table">
        <thead>
            <tr>
                <th>ลำดับ</th>
                <th style="display:none">@Html.DisplayNameFor(model => model.id)</th>
                <th style="width:50px;">@Html.DisplayNameFor(model => model.member_code)</th>
                <th style="width:30px;">@Html.DisplayNameFor(model => model.title)</th>
                <th style="width:150px;">ชื่อ-สกุล</th>
                @*<th style="width:70px;">@Html.DisplayNameFor(model => model.birthdate)</th>*@
                @*<th style="width:15px;">@Html.DisplayNameFor(model => model.current_age)</th>*@
                <th style="width:15px;">อายุ</th>
                <th style="width:50px;">@Html.DisplayNameFor(model => model.cid_card)</th>
                <th>ที่อยู่</th>
                <th style="width:50px;">@Html.DisplayNameFor(model => model.mobile)</th>
                <th style="width:50px;">@Html.DisplayNameFor(model => model.tel)</th>
                <th style="width:50px;text-align:center">@Html.DisplayNameFor(model => model.email)</th>
                @*<th style="width:50px;text-align:center">@Html.DisplayNameFor(model => model.facebook)</th>
                <th style="width:50px;text-align:center">@Html.DisplayNameFor(model => model.line)</th>*@
            </tr>
        </thead>
        <tbody>
            @{ var countOrder = 0;}
            @foreach (var item in Model)
            {
                countOrder++;
                <tr>
                    <td>
                        @countOrder
                    </td>
                    <td style="display:none">@Html.DisplayFor(modelItem => item.id)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.member_code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fname) @Html.DisplayFor(modelItem => item.lname)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.birthdate)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cid_card)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.texta_address) @Html.DisplayFor(modelItem => item.textb_address) @Html.DisplayFor(modelItem => item.textc_address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.facebook)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.line)
                    </td>*@

                </tr>
            }
        </tbody>
    </table>